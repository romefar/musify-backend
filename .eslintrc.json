{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "block-spacing": ["warn", "always"],
        "comma-spacing": ["warn", {
            "after": true
        }],
        "max-len": ["warn", {
            "code": 120
        }],
        "no-dupe-keys": 2,
        "no-ex-assign": 2,
        "no-extra-semi": 1,
        "eqeqeq": 1,
        "no-multi-spaces": 1,
        "no-shadow": 1,
        "no-unused-vars": 1,
        "eol-last": 1,
        "no-multiple-empty-lines": 1,
        "@typescript-eslint/no-explicit-any": 2,
        "@typescript-eslint/no-for-in-array": 2
    }
}
